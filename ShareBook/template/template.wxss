/* pages/template/template.wxss */
.tabbar_box{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 999;
    width: 100%;
    /* height: 120rpx; */
    border-top: 1rpx solid #d7d7d7; 
}
.tabbar_box_circle{
    position:relative;
    top:-50rpx;
    left: 11rpx;
    width:122rpx;
    height:122rpx;
    border-radius: 50%;
    background: rgba(255, 255, 255, 1);
    border: 1rpx solid #000000;
}
.tabbar_nav{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 20rpx;
    height: 100%;
    font-family: 'PingFangSC-Regular';
    /* color: #333333; */
}

.tabbar_icon{
    width: 35.5rpx;
    height:43.7rpx;
    /* mode: 'scaleToFill'; */
}
.unselectedtext{
  color: #333333;
  font-size: 20rpx;
  font-family: 'PingFangSC-Regular';
}
.selectedtext{
  color: #1D82D2;
}
.tabbar_nav:nth-child(2) image{ 
    position:relative;
    top:-39rpx;
    width:100rpx;
    height:100rpx;
    border-radius: 50%;
    /* mode: 'scaleToFill'; */
}
.tabbar_nav:nth-child(2) text{  
    position:relative; 
    top:-39rpx;
    /* height: 0rpx;
    width: 0rpx;
    white-space:nowrap;
    text-overflow: clip; */
}